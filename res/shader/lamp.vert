//----------------------------------------------------------------------------------------------------------------------

layout(location = 0) in vec3 vertex_position;

//----------------------------------------------------------------------------------------------------------------------

layout(binding = 0) uniform Matrix_info {
    mat4 model;
    mat4 view;
    mat4 projection;
    mat4 mv;
    mat4 mvp;
    mat4 normal;
} matrix_info;

//----------------------------------------------------------------------------------------------------------------------

void main()
{
	gl_Position = matrix_info.mvp * vec4(vertex_position, 1.0);
}

