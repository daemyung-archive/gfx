precision mediump float;

//----------------------------------------------------------------------------------------------------------------------

layout(location = 0) in vec4 color;
layout(location = 1) in vec2 uv;

//----------------------------------------------------------------------------------------------------------------------

layout(location = 0) out vec4 fragment_color;

//----------------------------------------------------------------------------------------------------------------------

layout(binding = 0) uniform sampler2D font;

//----------------------------------------------------------------------------------------------------------------------

void main()
{
	fragment_color = texture(font, uv) * color;
}