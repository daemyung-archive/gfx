//----------------------------------------------------------------------------------------------------------------------

layout(location = 0) out vec2 uv;

//----------------------------------------------------------------------------------------------------------------------

void main()
{
	vec2 vertex = vec2(gl_VertexIndex % 2, gl_VertexIndex / 2);

	gl_Position = vec4(vertex * 4.0 - 1.0, 0.0, 1.0);
	uv = vertex * vec2(2.0, -2.0) + vec2(0.0, 1.0);
}

